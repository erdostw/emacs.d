# -*- mode: snippet -*-
# name: git fork
# key: git-fork
# group: babel.git
# expand-env: ((yas-indent-line 'fixed))
# --
#+begin_src sh :dir "${1:~/Code/Emacs}" :var repo_name="${2:hl-sexp}" :results file link :file "$2/${3:README.md}"$0 :async
if [ ! -d $repo_name ]; then
  git clone ${4:forked repo Git}
  cd $repo_name
  git remote add upstream ${5:upstream repo Git}
  git fetch upstream
  git remote show
else
  cd $repo_name
  git remote show
fi
#+end_src