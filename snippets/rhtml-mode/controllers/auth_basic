# -*- mode: snippet; require-final-newline: nil -*-
# name: auth_basic
# key: auth_basic
# group: controllers
# --
  before_filter :authenticate, :except => [:index, :show, :create]
private
  def authenticate
    authenticate_or_request_with_http_basic do |name, password|
      name == "admin" && password == "open"
    end
  end